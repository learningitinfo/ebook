<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace的值必须与对应mapper接口的全名一致-->
<mapper namespace="com.leshan.ebook.mapper.OrderMapper">
    <!--查询订单总金额-->
    <select id="totalPrice" resultType="bigdecimal">
        select sum(c.nums*g.salesprice) from mall_cart c,mall_goods g
	        where c.goodsid = g.id and c.id in
	        <foreach collection="array" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
    </select>

    <!--添加订单-->
    <insert id="addOrder">
        insert into mall_order
            values(default,#{orderno},#{userid},now(),#{accept},#{telphone},#{address},#{money},'1',null,'0')
    </insert>

</mapper>